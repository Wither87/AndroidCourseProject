<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/specificationConstraint"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
            android:id="@+id/specificationCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/specificationConstraint"
            app:layout_constraintTop_toTopOf="@+id/specificationConstraint"
            android:layout_marginVertical="10dp"
            android:theme="@style/ThemeOverlay.MaterialComponents.Light">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/specificationCardConstraint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="4dp"
                android:paddingVertical="4dp"
                android:paddingHorizontal="6dp">
            <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/specificationTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Title: "
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="@+id/specificationCardConstraint"
                    app:layout_constraintTop_toTopOf="@+id/specificationCardConstraint"/>
            <com.google.android.material.card.MaterialCardView
                    android:id="@+id/specificationRecyclerCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@+id/specificationTitle"
                    app:layout_constraintTop_toBottomOf="@+id/specificationTitle"
                    android:layout_marginHorizontal="10dp"
                    app:cardCornerRadius="0dp"
                    app:cardBackgroundColor="#f7f7f7">
                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/specificationSpecsRecycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/phone_specifications_specs_item"
                        tools:itemCount="3"/>

            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>