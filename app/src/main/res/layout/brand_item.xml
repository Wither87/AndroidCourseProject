<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/brandContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp">

    <com.google.android.material.card.MaterialCardView
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/brandContainer"
            app:layout_constraintStart_toStartOf="@+id/brandContainer">

        <com.google.android.material.textview.MaterialTextView
                android:id="@+id/brandItemTitle"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textSize="22sp"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="@+id/brandContainer"
                app:layout_constraintStart_toStartOf="@+id/brandContainer"
                app:layout_constraintBottom_toBottomOf="@+id/brandContainer"
                tools:text="Acer"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"/>

    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>